@model User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="text-center">
                <h3>Login Dashboard</h3>
            </div>

            <div class="col-md-5 col-md-12 offset-md-4">
                <form method="post" asp-action="Login_user">
                    <div class="col-md-5 col-sm-12">
                        <input type="email" asp-for="Email"  class="form-control" placeholder="Email"/>
                    </div>
                    <div class="col-md-5 col-sm-12">
                        <input type="password" asp-for="passw"  class="form-control" placeholder="Password"/>
                    </div>
                  
                    <div class="" col-md-5 col-sm-12">
                        <input type="submit" class="btn btn-info" value="Login"/>
                    </div>

                   
                </form>
            </div>
        </div>
    </div>
</body>
</html>
